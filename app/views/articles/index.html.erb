<h1>Article List</h1>



<table>
	<thead>
		<tr>
			<th>Title</th>
			<!-- <th>Body</th> -->
		</tr>

	</thead>
	<tbody>
		<% @articles.each do |article| %>
			<tr>
				<!-- <td><%= link_to article.title, article_path(article) %></td> -->
				<td><%= article.title %> &nbsp;</td>
				<!-- <td><%= article.body %></td> -->
				<td><%= link_to 'Show', article_path(article) %> &nbsp;</td>
				<td><%= link_to 'Edit', edit_article_path(article) %> &nbsp;</td>
				<td><%= link_to 'Delete', delete_article_path(article) %> &nbsp;</td>
			</tr>
		<% end %>
	</tbody>
</table>

<p>
